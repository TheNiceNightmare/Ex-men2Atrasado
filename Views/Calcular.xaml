<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exámen2.Views.Calcular"
             Title="Calcular">
    <StackLayout Margin="20">
        <Label Text="Número 1" />
        <Entry Keyboard="Numeric" Text="{Binding N1}" />

        <Label Text="Número 2" />
        <Entry Keyboard="Numeric" Text="{Binding N2}" />

        <Button Text="Respuesta" Command="{Binding ValidarCommand}" />

        <Label Text="{Binding Resultado}" />
    </StackLayout>
</ContentPage>